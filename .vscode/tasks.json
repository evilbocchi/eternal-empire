{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: install",
            "type": "shell",
            "command": "npm install",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "close": true
            }
        },
        {
            "label": "npm: dev",
            "dependsOn": "npm: install",
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "npm run dev",
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch",
                {
                    "owner": "typescript",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ],
                    "pattern": {
                        "regexp": "^(.+\\.ts):(\\d+):(\\d+) - error TS roblox-ts: (.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4
                    }
                }
            ],
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "npm: plugin dev",
            "dependsOn": "npm: install",
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "npm run dev:plugin",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}